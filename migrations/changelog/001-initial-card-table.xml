<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="1" author="prokopenko">
        <createTable tableName="cards">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="full_number" type="VARCHAR(25)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="hidden_number" type="VARCHAR(25)">
                <constraints nullable="false"/>
            </column>
            <column name="owner" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
            <column name="validity_period" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="balance" type="BIGINT" defaultValue="0" />
        </createTable>
    </changeSet>
</databaseChangeLog>